<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AdminLoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="32dp"
        android:src="@drawable/logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sweeto"
        android:textColor="@color/black"
        android:textSize="40sp"
        android:fontFamily="@font/yeonsung_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:ignore="HardcodedText" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/lato_bold"
        android:text="Login To Your\nAdmin Dashboard"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="@id/imageView"
        app:layout_constraintStart_toStartOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        tools:ignore="HardcodedText,TextViewEdits" />

    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Email"
        android:elevation="2dp"
        android:outlineSpotShadowColor="@color/textColor"
        android:drawableLeft="@drawable/mail"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittextshape"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        tools:ignore="Autofill,HardcodedText,MissingConstraints,NotSibling,RtlHardcoded,RtlSymmetry,UnknownId,UnusedAttribute" />

    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Password"
        android:elevation="2dp"
        android:outlineSpotShadowColor="@color/textColor"
        android:drawableLeft="@drawable/lock"
        android:drawablePadding="15dp"
        android:paddingLeft="15dp"
        android:inputType="textPassword"
        android:background="@drawable/edittextshape"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editTextEmail"
        tools:ignore="Autofill,HardcodedText,MissingConstraints,RtlHardcoded,RtlSymmetry,UnusedAttribute" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Or\nContinue With"
        android:layout_marginTop="32dp"
        android:textAlignment="center"
        android:textColor="@color/textColor"
        android:fontFamily="@font/yeonsung_regular"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@id/editTextPassword"
        app:layout_constraintStart_toStartOf="@id/editTextPassword"
        app:layout_constraintTop_toBottomOf="@id/editTextPassword"
        tools:ignore="HardcodedText" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/GoogleButton"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:textAllCaps="false"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/google"
        android:text="Google"
        android:layout_marginLeft="20dp"
        android:paddingLeft="15dp"
        android:background="@drawable/edittextshape"
        android:outlineSpotShadowColor="@color/textColor"
        app:layout_constraintEnd_toStartOf="@id/FacebookButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView4"
        tools:ignore="HardcodedText,NotSibling,RtlHardcoded,RtlSymmetry,UnknownId,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/FacebookButton"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:drawableLeft="@drawable/facebook"
        android:text="Facebook"
        android:layout_marginLeft="20dp"
        android:paddingLeft="15dp"
        android:background="@drawable/edittextshape"
        android:outlineSpotShadowColor="@color/textColor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/GoogleButton"
        tools:ignore="HardcodedText,RtlHardcoded,RtlSymmetry,UnusedAttribute" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/LoginButton"
        android:layout_width="125dp"
        android:layout_height="57dp"
        android:layout_marginTop="12dp"
        android:text="Login"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:fontFamily="@font/yeonsung_regular"
        android:background="@drawable/greenbuttonshape"
        android:outlineSpotShadowColor="@color/textColor"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintEnd_toEndOf="@id/FacebookButton"
        app:layout_constraintStart_toStartOf="@id/GoogleButton"
        app:layout_constraintTop_toBottomOf="@id/FacebookButton"
        tools:ignore="HardcodedText,UnusedAttribute" />

    <TextView
        android:id="@+id/dontHaveAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't Have Account?"
        android:layout_marginTop="10dp"
        android:textColor="@color/textColor"
        android:fontFamily="@font/lato_bold"
        app:layout_constraintEnd_toEndOf="@id/LoginButton"
        app:layout_constraintStart_toStartOf="@id/LoginButton"
        app:layout_constraintTop_toBottomOf="@id/LoginButton"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/yeonsung_regular"
        android:text="Design By\n   Dibya"
        android:textAlignment="center"
        android:textColor="#4CE70B"
        android:textSize="19sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="HardcodedText" />

</androidx.constraintlayout.widget.ConstraintLayout>
